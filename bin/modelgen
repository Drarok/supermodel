#!/usr/bin/env php
<?php

// When developing, the path to the Composer autoloader is not the same as when
// the project is pulled in as a dependency.
$autoloaderPaths = array(
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
);

$loaded = false;
foreach ($autoloaderPaths as $path) {
    if (file_exists($path)) {
        require $path;
        $loaded = $path;
        break;
    }
}

if (! $loaded) {
    throw new Exception('Failed to find the Composer autoloader!');
}

echo 'This is a PHP binary running in ', __DIR__, PHP_EOL;
